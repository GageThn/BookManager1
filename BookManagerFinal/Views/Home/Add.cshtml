@model BookModel
@{
	string title = ViewBag.Action;
	ViewData["Title"] = title;
}
<div class="text-white">
<h2>Add Page </h2>
<h2>@Model.Name</h2>
</div>

<form asp-action="Add" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Title</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Genre" class="form-label">Book Genre:</label>
        <input asp-for="Genre" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label">Reading Status:</label>
        <input asp-for="Status" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Summary" class="form-label">Book Summary:</label>
        <textarea asp-for="Summary" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label">Rating (0-5):</label>
        <input asp-for="Rating" class="form-control" />
    </div>


    <input type="hidden" asp-for="BookId" />

    <button type="submit" class="btn btn-primary">Add New Book</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>

</form>
