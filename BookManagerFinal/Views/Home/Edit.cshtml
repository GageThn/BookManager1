@model BookModel
@{
	string title = ViewBag.Action;
	ViewData["Title"] = title;
}
<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
	<h2>Insert each feild for book information to edit here (Model has to be completed)</h2>

	<div asp-validation-summary="All" class="Text-danger"></div>

	<div class="mb-3">
		<label asp-for="Name" class="form-label">Title</label>
		<input asp-for="Name" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="Genre" class="form-label">Book Genre:</label>
		<input asp-for="Genre" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="Status" class="form-label">Reading Status:</label>
		<input asp-for="Status" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="Description" class="form-label">Book Descritption:</label>
		<input asp-for="Description" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="Rating" class="form-label">Rating (0-5):</label>
		<input asp-for="Rating" class="form-control" />
	</div>

	<input type="hidden" asp-for="BookId" />

	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-controller="Home" asp-action="Index"
	   class="btn btn-primary">Cancel</a>

</form>