@model BookModel
@{
	string title = ViewBag.Action;
	ViewData["Title"] = title;
}

<style>
	td{
		text-align: right;
		padding: 10px;
		color: white;
	}
	th {
		text-align: right;
		padding: 10px;
	}

</style>

<h2>Editing: </h2>
<h2>@Model.Name</h2>

<form asp-action="Edit" method="post">

	<div asp-validation-summary="All" class="Text-danger"></div>

	<div class="mb-3">
		<label asp-for="Name" class="form-label">Title</label>
		<input asp-for="Name" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="Genre" class="form-label">Book Genre:</label>
		<input asp-for="Genre" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="Status" class="form-label">Reading Status:</label>
		<input asp-for="Status" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="Summary" class="form-label">Book Descritption:</label>
		<input asp-for="Summary" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="Rating" class="form-label">Rating (0-5):</label>
		<input asp-for="Rating" class="form-control" />
	</div>

	<input type="hidden" asp-for="BookId" />

	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-controller="Home" asp-action="Index"
	   class="btn btn-primary">Cancel</a>

</form>